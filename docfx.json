{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../AzureBlueSolutions.Json.NET",
          "files": [ "**/*.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      { "files": [ "api/**.yml" ] },
      { "files": [ "articles/**.md" ] },
      { "files": [ "index.md" ] },
      { "files": [ "toc.yml" ], "exclude": [ "_site/**" ] }
    ],
    "resource": [
      { "files": [ "images/**" ] }
    ],
    "dest": "_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appName": "mysite",
      "_appTitle": "mysite",
      "_enableSearch": true
    }
  }
}