{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../AzureBlueSolutions.Json.NET",
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**", "**/node_modules/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      { "files": [ "index.md", "toc.yml" ] },
      { "files": [ "articles/**.md", "articles/**/toc.yml" ] },
      { "files": [ "api/**.yml", "api/index.md", "api/toc.yml" ] }
    ],
    "resource": [
      { "files": [ "images/**" ] },
      { "files": [ "styles/**" ] }
    ],
    "dest": "../_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_disableContribution": true,
      "_enableSearch": true,
      "_enableDarkMode": true,
      "_disableBreadcrumb": false,
      "title": "AzureBlueSolutions.Json.NET Documentation",
      "description": "Guides and API reference for AzureBlueSolutions.Json.NET",
      "_xref": [
        "https://xref.docs.microsoft.com/query?uid={uid}"
      ]
    }
  }
}